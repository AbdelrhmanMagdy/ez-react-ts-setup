{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "target": "es6",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "plugins": [{ "name": "typescript-tslint-plugin" }]
}
